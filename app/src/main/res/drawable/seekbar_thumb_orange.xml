<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Vòng tròn ngoài - Viền Cam -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#C4561B"/>
            <size
                android:width="12dp"
                android:height="12dp"/>
        </shape>
    </item>

    <!-- Vòng tròn trong - Màu trắng -->
    <item
        android:top="2dp"
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF"/>
        </shape>
    </item>

</layer-list>