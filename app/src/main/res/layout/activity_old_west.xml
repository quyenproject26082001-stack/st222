<!--        <include layout="@layout/ads_shimmer_collap_native_banner" />-->
<!--    </FrameLayout>-->
    <!--quyen-->

    <!-- RecyclerView Staggered Grid -->

    <!-- Empty State -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvDesigns"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:clipToPadding="false"
        android:paddingHorizontal="8dp"
        android:paddingBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutActionBar"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp"
        tools:listitem="@layout/item_oldwest" />

    <TextView
        android:id="@+id/tvEmpty"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="360:140"
        android:text="@string/no_designs_yet"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:visibility="visible"
        android:gravity="center"
        android:fontFamily="@font/kurale_regular"
        android:background="@drawable/map"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.47"
        app:layout_constraintTop_toTopOf="parent"
        />

    <!--quyen-->
    <!-- Native Collapsible Ad - Bottom -->
    <FrameLayout
        android:id="@+id/nativeCollapOldWestActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    </FrameLayout>
