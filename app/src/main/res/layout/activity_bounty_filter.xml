<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity_app.bountyfilter.BountyFilterActivity">




    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/img_bg_language"
        android:scaleType="fitXY"
        />
    <androidx.camera.view.PreviewView
        android:id="@+id/imgCamera"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.34"
        app:layout_constraintWidth_percent="0.78"
        app:layout_constraintVertical_bias="0.354"
        app:layout_constraintStart_toStartOf="@id/imgPlay"
        app:layout_constraintEnd_toEndOf="@id/imgPlay"
        app:layout_constraintTop_toTopOf="@id/imgPlay"
        app:layout_constraintBottom_toBottomOf="@id/imgPlay"
        />

    <ImageView
        android:id="@+id/imgCamera1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        app:layout_constraintHeight_percent="0.34"
        app:layout_constraintWidth_percent="0.78"
        app:layout_constraintVertical_bias="0.354"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/imgPlay"
        app:layout_constraintEnd_toEndOf="@id/imgPlay"
        app:layout_constraintTop_toTopOf="@id/imgPlay"
        app:layout_constraintBottom_toBottomOf="@id/imgPlay"
        />

    <ImageView
        android:id="@+id/imgPlay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/layoutActionBar"
        android:src="@drawable/img_bounty_start"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintDimensionRatio="328:480"
        />


    <TextView
        android:id="@+id/tvBountyFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2.000.000"
        app:layout_constraintStart_toStartOf="@id/imgPlay"
        app:layout_constraintEnd_toEndOf="@id/imgPlay"
        app:layout_constraintTop_toTopOf="@id/imgPlay"
        app:layout_constraintBottom_toBottomOf="@id/imgPlay"
        android:textSize="40sp"
        android:visibility="invisible"
        android:textColor="#3B2104"
        app:layout_constraintVertical_bias="0.83"
        android:fontFamily="@font/caslon_antique_regular"/>


<!--    &lt;!&ndash; Dark overlay for initial dimming effect - placed before btnPlay so btnPlay is on top &ndash;&gt;-->
<!--    <View-->
<!--        android:id="@+id/darkOverlay"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:background="#99000000"-->
<!--        android:visibility="visible"-->
<!--        android:clickable="false"-->
<!--        android:focusable="false"/>-->

    <TextView
        android:id="@+id/btnPlay"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/imgPlay"
        android:background="@drawable/ic_play"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:text="@string/play"
        android:gravity="center"
        android:fontFamily="@font/kurale_regular"
        android:textSize="20sp"
        android:textColor="#C4561B"/>

    <!-- White flash overlay for camera capture effect -->
    <View
        android:id="@+id/flashOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:visibility="gone"
        android:alpha="0"/>

    <!--    layoutActionBar-->
    <FrameLayout
        android:id="@+id/layoutActionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <include
            android:id="@+id/actionBar"
            layout="@layout/layout_actionbar" />
    </FrameLayout>

    <!-- nativeClHome -->
    <FrameLayout
        android:id="@+id/nativeClBounty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <include layout="@layout/ads_shimmer_collap_native" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>