<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="5dp"
    android:layout_marginTop="5dp"
    >

    <!-- Rendered bitmap of the template with shimmer placeholder -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgRenderedPoster"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            android:layerType="hardware"
            app:layout_constraintWidth_percent="0.95"
            app:layout_constraintHeight_percent="0.975"
            android:layout_marginHorizontal="10dp"
            tools:src="@drawable/template_1_preview"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />


        <ImageView
            android:id="@+id/imgFramePoster"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitCenter"
            android:layerType="hardware"
            android:background="@drawable/frame_item"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="156:225"
            />

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/imgShimmer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="156:225"
            app:shimmer_duration="1500"
            app:shimmer_auto_start="true"
            app:shimmer_base_alpha="1"
            tools:visibility="gone"
            app:shimmer_highlight_alpha="0.8"
            app:shimmer_shape="linear"
            app:shimmer_direction="left_to_right"
            app:shimmer_base_color="#909090"
            app:shimmer_highlight_color="#FFFFFF">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#909090" />

        </com.facebook.shimmer.ShimmerFrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
